<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/material_on_background_emphasis_medium"
    android:padding="8dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/line_a"
        android:text="TexiView"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/line_b"
        android:text="TexiView"
        android:textColor="#fff000"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/line_c"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/line_d"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/line_e"
            android:text="TextView"
            android:textColor="#ffff66"
            android:textSize="16sp"
            android:layout_weight="0.3"/>
    </LinearLayout>



</LinearLayout>
